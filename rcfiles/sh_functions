##### Functions #####
mdc() { mkdir -p "$1" && cd "$1" }

##### Ruby/Rails/Rake ##### 
alias rsrv="./script/server -u"
alias rsrvp="ss -p"
alias rcon="./script/console"
alias rmig="rake db:migrate db:test:clone"
alias rdbf="rake db:recreate db:fixtures:load RAILS_ENV=development"

##### git ##### 
alias g="git checkout"
alias gchk="git checkout"
alias s="git status"
alias gs="git status"
alias ga="git add ."
alias gd="git diff"
alias gm="git merge"
alias amend="git commit --amend"
alias gc="git commit -am"
alias gf="git fetch origin"
alias gb="git checkout -b"
alias gbr="git branch"
alias gp="git push --tags "
alias gu="git pull --tags "
alias gl="git log"
function gfm() {
  gf $*
  gm FETCH_HEAD
}
function gbranch() {
  current_branch=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
}
function gpo() {
  # pushes the current branch; whatever that is
  gbranch
  gp origin $current_branch
}
function guo() {
  # pushes the current branch; whatever that is
  gbranch
  gu origin $current_branch
}
function gpom() {
  gp origin master
}
function guom() {
  gu origin master
}


